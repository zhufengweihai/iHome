<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="showIndicator" format="boolean"/>
        <attr name="indicatorColor" format="color"/>
        <attr name="showDivider" format="boolean"/>
        <attr name="dividerColor" format="color"/>
        <attr name="indicatorHeight" format="dimension"/>
        <attr name="underlineHeight" format="dimension"/>
        <attr name="showUnderline" format="boolean"/>
        <attr name="underlineColor" format="color"/>
        <attr name="paddingDivider" format="dimension"/>
        <attr name="tabPaddingLeftRight" format="dimension"/>
        <attr name="scrollOffset" format="dimension"/>
        <attr name="backgroundTab" format="reference"/>
        <attr name="shouldExpand" format="boolean"/>
        <attr name="textCaps" format="boolean"/>
        <attr name="textIndicatorColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="TextViewEx">
        <attr name="drawableWidth" format="dimension"/>
        <attr name="drawableHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="RadarScanView">
        <attr name="circleColor" format="color"/>
        <attr name="radarColor" format="color"/>
        <attr name="tailColor" format="color"/>
    </declare-styleable>
    
    <declare-styleable name="RippleBackground">
        <attr name="rb_color" format="color" />
        <attr name="rb_strokeWidth" format="dimension"/>
        <attr name="rb_radius" format="dimension"/>
        <attr name="rb_duration" format="integer"/>
        <attr name="rb_rippleAmount" format="integer"/>
        <attr name="rb_scale" format="float"/>
        <attr name="rb_type" format="enum">
            <enum name="fillRipple" value="0"/>
            <enum name="strokeRipple" value="1"/>
        </attr>
    </declare-styleable>
</resources>